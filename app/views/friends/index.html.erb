<% if user_signed_in? %>
  <h1>Friends</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <!--<th scope="col">Last</th>-->
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <!--<th scope="col">User ID</th>-->
        <th colspan="1"> </th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %></td>
            <!-- <td><%= friend.first_name %> <%= friend.last_name %></td> -->
            <!--<td><%= friend.last_name %></td>-->
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <!--<td><%= friend.user_id %></td>-->
            <td><%= button_to "Delete", friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class:"btn btn-outline-danger btn-sm " %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>



<% else %>
  <h1>Hello World</h1>
  <p>First Page of the World</p>

<% end %>